// Grave accent by it's own
grave: grave {
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings = <&macro_tap &kp GRAVE &kp GRAVE>;
};

// Tilde by it's own
tilde: tilde {
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings
        = <&macro_press &kp LSHFT>
        , <&macro_tap &kp GRAVE &kp GRAVE>
        , <&macro_release &kp LSHFT>
        ;
};

// double L: "lÂ·l"
double_l: double_l {
    compatible = "zmk,behavior-macro";
    #binding-cells = <0>;
    bindings = <&macro_tap &kp L &kp RA(X) &kp L>;
};

